name:                hello
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/githubuser/glfw#readme
license:             BSD3
license-file:        LICENSE
author:              Author name here
maintainer:          example@example.com
copyright:           2017 Author name here
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Window
                     , Drawable
                     , Machine
                     , Shaders
                     , ShaderLoader
                     , Initializable
                     , Application
                     , Cmd
                     , State
                     , Keyboard
  other-modules:       CallbackUpdater
                     , Mouse
  build-depends:       base >= 4.7 && < 5
                     , GLFW-b
                     , OpenGL
                     , OpenGLRaw
                     , bytestring
                     , hashmap
                     , hashable
                     , containers
                     , StateVar
  default-language:    Haskell2010

executable hello
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N -fPIC
  build-depends:       base
                     , hello
                     , GLFW-b
                     , OpenGL
                     , OpenGLRaw
                     , hmatrix
                     , microlens-th
                     , microlens-platform
  other-modules:       View
                     , MyState
                     , Matrix
                     , Uniform
                     , Primitives.Square
                     , Primitives.Cube
  default-language:    Haskell2010
  extra-libraries:     cblas

test-suite hello-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , glfw
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N -fPIC
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/githubuser/glfw
